<view class="container" wx:for="{{detail}}" wx:key="{{item}}">
    <view><text class="nav">{{item.title}}</text></view>
    <view class="content">
        <view class="left">
            <image src="{{item.imgUrl}}"></image>
        </view>
        <view class="right">
            <text>作者:{{item.author}}</text>
            <text>出版社:{{item.publisher}}</text>
            <text>出版年:{{item.pubdate}}</text>
            <text>页数:{{item.pages}}</text>
            <text>定价:{{item.price}}</text>
        </view>
    </view>
    <view class="ft">
        <view>内容简介······</view>
        <view>{{item.summary}}</view>
    </view>
</view>